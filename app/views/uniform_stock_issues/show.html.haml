- provide(:title, 'Uniform Stock Issue Detail')
- model_class = UniformStockIssue
.page-header
  %h1= t 'uniform_stock_issues.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.iv_no', :default =>model_class.human_attribute_name(:iv_no) + ":"
  %dd=  @uniform_stock_issue.iv_no
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.stock_id', :default =>model_class.human_attribute_name(:stock_id) + ":"
  %dd=  @uniform_stock_issue.uniform_stock.uniform_item.uniform_details
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.issued_to', :default =>model_class.human_attribute_name(:issued_to) + ":"
  %dd= check_kin {@uniform_stock_issue.receiver.staff_details}
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.issued_by', :default =>model_class.human_attribute_name(:issued_by) + ":"
  %dd= check_kin {@uniform_stock_issue.issuer.staff_details}
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.issued_on', :default =>model_class.human_attribute_name(:issued_on) + ":"
  %dd= check_kin {@uniform_stock_issue.issued_on.strftime("%d-%b-%Y")}
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.quantity', :default =>model_class.human_attribute_name(:quantity) + ":"
  %dd=@uniform_stock_issue.quantity
%dl.dl-horizontal
  %dt= t 'uniform_stock_issues.document_id', :default =>model_class.human_attribute_name(:document_id ) + ":"
  %dd=@uniform_stock_issue.document_id

.form-actions
  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), uniform_stock_issues_path, :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
    edit_uniform_stock_issue_path(@uniform_stock_issue), :class => 'btn'
  = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
    uniform_stock_issue_path(@uniform_stock_issue),                                                                                                    |
    :method => 'delete',                                                                                                           |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
    :class => 'btn btn-danger'                                                                                                     |
